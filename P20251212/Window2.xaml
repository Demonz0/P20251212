<Window x:Class="P20251212.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P20251212"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Content="Új felhasználó" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Felhasználónév" Grid.Row="2" Grid.Column="1"  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Label Content="Jelszó " Grid.Row="3" Grid.Column="1"  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="left"/>
        <Label Content="Jelszó újra " Grid.Row="4" Grid.Column="1"  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="left"/>
        <TextBox x:Name="fNev" Grid.Row="2" Grid.Column="2" Height="50" Width="125" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="fPassw" Grid.Row="3" Grid.Column="2" Height="50" Width="125" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="fPassw2" Grid.Row="4" Grid.Column="2" Height="50" Width="125" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="btnIn" Content="Új felhasználó létrehozása" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Height="60" Width="160" HorizontalAlignment="Center" Click="btnIn_Click"/>
    </Grid>
</Window>
