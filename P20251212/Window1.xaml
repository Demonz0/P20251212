<Window x:Class="P20251212.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P20251212"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label Content="Felhasználó belépés" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Felhasználónév" Grid.Row="2" Grid.Column="1"  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Label Content="Jelszó" Grid.Row="3" Grid.Column="1"  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="left"/>
        <TextBox x:Name="fNev" Grid.Row="2" Grid.Column="2" Height="50" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <PasswordBox x:Name="passwd" Grid.Row="3" Grid.Column="2" Height="50" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnIn" Content="Belépés" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Height="60" Width="80"/>
        <Button x:Name="btnMegse" Content="Mégse" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Height="60" Width="80"/>
        <Button x:Name="btnClose" Content="Bezárás" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Height="60" Width="80"/>
    </Grid>
</Window>
